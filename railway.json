{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "bun install --frozen-lockfile && bun run build"
  },
  "deploy": {
    "startCommand": "cd apps/web && bun run serve",
    "healthcheckPath": "/",
    "healthcheckTimeout": 300
  }
}
